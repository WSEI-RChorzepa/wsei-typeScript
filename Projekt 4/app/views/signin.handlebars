<div class="grid">

    <div class="form-wrapper">
        <div class="image"></div>

        <form action="/signin" method="POST" autocomplete="off">
            <h6 class="title">Scheduler Planner</h6>
            <p class="subtitle">Log in to your account.</p>

            {{>success messages=messages}}

            <div class="group">
                <label for="email"><span class="fa fa-envelope"></span> Email</label>
                <input placeholder="Email" type="email" name="email" autocomplete="off" />
            </div>

            <div class="group">
                <label for="email"><span class="fa fa-lock"></span> Password</label>
                <input placeholder="Password" type="password" name="password" autocomplete="off" />
            </div>

            {{>validation messages=messages}}

            <div>
                <button class="button primary large" type="submit"> <span class="fa fa-sign-in-alt"></span> Sign
                    in</button>
                <a href="/signup" type="button" class="button success large"> <span class="fa fa-plus"></span> Sign
                    up</a>
            </div>
        </form>


    </div>
</div>

<script src="/signin.js"></script>