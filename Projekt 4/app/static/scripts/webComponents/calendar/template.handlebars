<style>
    .calendar {
        width: calc(7 * 55px - 5px);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .actions {
        width: 100%;
        margin-bottom: 5px;
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        grid-gap: 5px;
    }

    .actions button:nth-child(1) {
        grid-column: 1;
    }

    .actions button:nth-child(2) {
        grid-column: 2;
    }

    .actions button {
        border: none;
        padding: 1rem ;
        background-color: rgba(0, 0, 0, .03);
    }

    .data {
        background-color: rgba(0, 0, 0, .03);
        width: 100%;
        padding: 1rem 0;
    }

    #year {
        text-align: center;
        font-weight: 500;
        font-size: 14px;
    }

    #month {
        text-align: center;
        font-weight: 500;
        font-size: 14px;
        margin-bottom: .5rem;
        letter-spacing: 1px;
    }

    #date {
        text-align: center;
        font-size: 14px;
    }

    .calendar .grid {
        display: grid;
        grid-template-columns: repeat(7, 50px);
        grid-template-rows: repeat(6, 50px);
        grid-gap: 5px;
    }

    .calendar .month {
        text-align: center;
    }

    .calendar .days {
        display: flex;
        justify-content: center;
        align-items: center;
        grid-gap: 5px;
    }

    .calendar .days div {
        width: 50px;
        text-align: center;
        padding: 1rem 0;
        font-size: 14px;
        font-weight: 300;
    }

    .calendar .grid div {
        width: 50px;
        text-align: center;
    }

    .calendar .grid div button {
        width: 100%;
        height: 100%;
        border-radius: 2px;
        border: none;
        font-size: 12px;
    }

    button:hover {
        cursor: pointer;
    }

   button.sat {
        background-color: var(--warning);
    }

    button.sun {
        background-color: var(--danger-light);
    }

    button.current {
        background-color: var(--primary);
        color: #FFF;
        font-weight: 400;
    }

    .calendar .grid div button.active {
        border: 1px solid #74b9ff;
    }

</style>

<div class="calendar">
    <div class="actions">
        <button id="previous">Previous</button>
        <button id="next">Next</button>
    </div>
    <div class="data">
        <div id="year">{{year}}</div>
        <div id="month">{{month}}</div>
        <div id="date">{{today}}</div>
    </div>
    <div class="days">
        <div>Mon</div>
        <div>Tue</div>
        <div>Wed</div>
        <div>Thu</div>
        <div>Fri</div>
        <div>Sat</div>
        <div>Sun</div>
    </div>
    <div id="grid-wrapper"></div>
</div>